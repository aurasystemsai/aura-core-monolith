# Aura Platform - Environment Variables
# Copy this to .env and fill in your values
# NEVER commit .env with real credentials to Git

# ==============================================
# CORE APPLICATION
# ==============================================

NODE_ENV=development
PORT=10000
APP_URL=http://localhost:10000

# ==============================================
# SHOPIFY INTEGRATION
# ==============================================

# Shopify OAuth (NEW - for one-click connection)
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders,read_customers,write_customers,read_inventory,write_inventory
SHOPIFY_API_VERSION=2024-01

# Legacy Shopify (for existing shopifyApi.js)
SHOPIFY_CLIENT_ID=your-shopify-client-id
SHOPIFY_CLIENT_SECRET=your-shopify-client-secret
SHOPIFY_ADMIN_TOKEN=shpat_xxx_or_shpss_xxx
SHOPIFY_REFRESH_TOKEN=your-refresh-token
SHOPIFY_ACCESS_TOKEN=shpat_your_access_token
SHOPIFY_STORE_URL=yourstore.myshopify.com

# ==============================================
# STRIPE BILLING
# ==============================================

STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ==============================================
# DATABASE
# ==============================================

DATABASE_URL=postgresql://username:password@localhost:5432/aura_platform

# ==============================================
# AI SERVICES
# ==============================================

OPENAI_API_KEY=sk-your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# ==============================================
# SESSION
# ==============================================

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_256_bit_random_session_secret
SESSION_DB_PATH=/var/data/aura-core-session.sqlite
DISABLE_SQLITE=false

# ==============================================
# OPTIONAL SERVICES
# ==============================================

KLAVIYO_API_KEY=your_klaviyo_api_key
SENDGRID_API_KEY=your_sendgrid_api_key

# AWS (for S3, etc.)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ==============================================
# LEGACY / COMPATIBILITY
# ==============================================

HOST_URL=http://localhost:10000
CONSOLE_URL=http://localhost:5173
DEBUG_KEY=optional-debug-key

# ==============================================
# RENDER.COM (if deploying to Render)
# ==============================================

RENDER_DISK_PATH=/var/data

# ==============================================
# SECURITY & MONITORING
# ==============================================

SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,http://localhost:10000

# ==============================================
# DEVELOPMENT ONLY
# ==============================================

DEBUG=true
MOCK_EXTERNAL_APIS=false
BYPASS_AUTH=false

