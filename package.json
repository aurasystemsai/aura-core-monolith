    "@shopify/app-bridge-react": "^4.2.8",
    "better-sqlite3": "^12.5.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.0",
    "marked": "^17.0.1",
    "openai": "^6.10.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0"
