# Revenue Infrastructure Environment Variables
# Add these to your .env file

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create in Stripe Dashboard â†’ Products)
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_id
STRIPE_PRICE_STARTER_ANNUAL=price_starter_annual_id
STRIPE_PRICE_GROWTH_MONTHLY=price_growth_monthly_id
STRIPE_PRICE_GROWTH_ANNUAL=price_growth_annual_id
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly_id
STRIPE_PRICE_PRO_ANNUAL=price_pro_annual_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id
STRIPE_PRICE_ENTERPRISE_ANNUAL=price_enterprise_annual_id

# =============================================================================
# DATABASE (REVENUE SCHEMA)
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/aura_cdp
DB_POOL_MAX=20
DB_POOL_MIN=2

# =============================================================================
# REDIS (USAGE EVENT BUFFERING)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# OAUTH 2.0 (MARKETPLACE APPS)
# =============================================================================
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
OAUTH_ENCRYPTION_KEY=your_32_byte_hex_key_here

# Generate: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
OAUTH_SIGNATURE_SECRET=your_base64_secret_here

# =============================================================================
# MARKETPLACE COMMISSION RATES
# =============================================================================
MARKETPLACE_PLATFORM_COMMISSION=0.25
MARKETPLACE_DEVELOPER_SHARE=0.75

# =============================================================================
# WHITE-LABEL REVENUE SHARING
# =============================================================================
WHITE_LABEL_DEFAULT_SHARE_PERCENT=20
WHITE_LABEL_MIN_SHARE_PERCENT=15
WHITE_LABEL_MAX_SHARE_PERCENT=30

# =============================================================================
# FINTECH PRODUCTS
# =============================================================================
FINTECH_MIN_INTEREST_RATE=8.0
FINTECH_MAX_INTEREST_RATE=15.0
FINTECH_NET_TERMS_FEE_PERCENT=3.0
FINTECH_MIN_AURA_SCORE=600

# =============================================================================
# DATA PRODUCTS
# =============================================================================
DATA_PRODUCTS_MIN_SAMPLE_SIZE=50

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_MARKETPLACE_ENABLED=true
FEATURE_FINTECH_ENABLED=true
FEATURE_DATA_PRODUCTS_ENABLED=true
FEATURE_VERTICALS_ENABLED=true
FEATURE_WHITE_LABEL_ENABLED=true
FEATURE_ENTERPRISE_ENABLED=true
